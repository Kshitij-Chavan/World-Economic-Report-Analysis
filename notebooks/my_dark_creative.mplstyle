font.family      : sans-serif
font.sans-serif  : Satoshi, Inter, DejaVu Sans, Arial
font.size        : 12.5

legend.facecolor : "#1A1A1A"
legend.edgecolor : "#2A2A2A"
legend.frameon   : True
legend.labelcolor: "#E6E6E6"

# âœ… Extended 10-color cycle
axes.prop_cycle  : cycler(color=["#4CD3C2","#A68FFF","#F6BD60","#F28482","#84A59D","#C3C1E6","#8FCB9B","#FF9B85","#5DA9E9","#E0A4FF"])
