figure.facecolor : "#121212"
figure.edgecolor : "#121212"

axes.facecolor   : "#1A1A1A"
axes.edgecolor   : "#2A2A2A"
axes.labelcolor  : "#E6E6E6"
axes.titlecolor  : "#E6E6E6"

# ðŸ§  Font sizes
axes.titlesize   : 11.5    # chart title
axes.labelsize   : 10.5    # axis labels (smaller than title)
xtick.labelsize  : 10.0
ytick.labelsize  : 10.0
legend.fontsize  : 10.0

# âœ¨ Improved layout spacing
axes.labelpad    : 14
axes.titlepad    : 18
xtick.major.pad  : 8
ytick.major.pad  : 8

